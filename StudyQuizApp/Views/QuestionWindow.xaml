<Window x:Class="StudyQuizApp.Views.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyQuizApp.Views"
        mc:Ignorable="d"
        Title="QuestionWindow" Height="509" Width="447">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Question text -->
            <RowDefinition Height="*"/>
            <!-- Dynamic content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        
        <!-- Row 0: Title -->
        <TextBlock Grid.Row="0"
                   Text="Add/Edit Question:"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   x:Name="titleTextBlock"/>
        
        <!-- Row 1: Question label + textbox -->
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="Question Text:"/>
            <TextBox x:Name="questionTextBox" Margin="0,0,0,10" Height="39"/>
        </StackPanel>

        <!-- Row 2: Dynamic content panel -->
        <StackPanel x:Name="dynamicFieldsPanel"
                    Grid.Row="2"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"/>
        
        <!-- Row 3: Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Height="30" Click="cancelBtn_Click"/>
            <Button x:Name="saveBtn" Content="Save" Width="80" Click="saveBtn_Click"/>
        </StackPanel>
    </Grid>

</Window>
