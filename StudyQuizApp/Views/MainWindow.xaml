<Window x:Name="mainWindow" x:Class="StudyQuizApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyQuizApp"
        xmlns:vm="clr-namespace:StudyQuizApp.ViewModels.DisplayContent"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="StudyQuizApp" Height="500" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu bar -->
            <RowDefinition Height="*"/>
            <!-- Main layout -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <MenuItem Header="Save as"
                          Click="SaveMenuItem_Click" />
                <Separator />
                <MenuItem Header="Exit"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        
        <Grid x:Name="MainGrid" Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <Grid x:Name="LeftStack" Margin="10" Grid.ColumnSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Label -->
                <RowDefinition Height="*"/>
                <!-- ListBox (fills space) -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom buttons -->
            </Grid.RowDefinitions>

            <!-- Top Buttons -->
            <Grid x:Name="LeftTopGrid" Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Add question:" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Button x:Name="addMultipleChoiceQBtn" Content="Multiple Choice" Margin="10" Grid.Column="1" Click="AddMultipleChoiceQ_Click"/>
                <Button x:Name="addQualitativeQBtn" Grid.Column="2" Content="Qualitative (Q&amp;A)" Margin="10" Click="AddQualitativeQ_Click"/>
            </Grid>

            <Label Grid.Row="1" x:Name="ListLabel" Content="Questions:"/>

            <ListBox Grid.Row="2"
                 x:Name="questionsListBox"
                 Margin="0,5"
                 ScrollViewer.CanContentScroll="True"
                 VerticalAlignment="Stretch"
                 ItemsSource="{Binding QuestionStrings}"
                 SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"/>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="3" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="editQBtn"
                        Grid.Column="0"
                        Content="Edit"
                        Margin="10"
                        Command="{Binding EditQuestionCommand}"
                        IsEnabled="{Binding CanEditOrDelete}"/>
                <Button x:Name="deleteQBtn"
                        Grid.Column="1"
                        Content="Delete"
                        Margin="10"
                        Command="{Binding DeleteQuestionCommand}"
                        IsEnabled="{Binding CanEditOrDelete}"/>
                <Button x:Name="clearSelectionBtn"
                        Grid.Column="2"
                        Content="Clear"
                        Margin="10"
                        IsEnabled="{Binding CanEditOrDelete}"
                        Command="{Binding ClearSelectionCommand}"/>
            </Grid>
        </Grid>

        <!-- Right Column -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <!-- For the button -->
                <RowDefinition Height="*"/>
                <!-- For the TextBox, fills remaining space -->
            </Grid.RowDefinitions>

                <Button
                    Grid.Row="0"
                    Content="Run Quiz"
                    Margin="10"
                    IsEnabled="{Binding CanRunQuiz}"
                    Command="{Binding RunQuizCommand}"/>

                <ContentControl Grid.Row="1"
                x:Name="displayArea"
                Content="{Binding DisplayContent}"
                Margin="0,10,0,0">
                    <ContentControl.Resources>
                        <!-- Instruction View Template -->
                        <DataTemplate DataType="{x:Type vm:HeadingAndListContent}">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Heading}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="DarkSlateBlue"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                                <TextBlock Text="{Binding Subheading}"
                                   FontSize="14"
                                   FontStyle="Italic"
                                   Foreground="SlateGray"
                                   Margin="0,0,0,12"
                                   TextWrapping="Wrap" />

                                <ItemsControl ItemsSource="{Binding ContentStrings}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="•  " FontWeight="Bold" />
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>

                        <!-- Question Detail Templates -->
                        <DataTemplate DataType="{x:Type vm:QualitativeQuestionDetailContent}">
                            <StackPanel Margin="10">
                                <TextBlock Text="Question:" FontWeight="Bold" />
                                <TextBlock Text="{Binding QuestionText}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                <TextBlock Text="Answer:" FontWeight="Bold" />
                                <TextBlock Text="{Binding Answer}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type vm:MultipleChoiceQuestionDetailContent}">
                            <StackPanel Margin="10">
                                <TextBlock Text="Question:" FontWeight="Bold" />
                                <TextBlock Text="{Binding QuestionText}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                <TextBlock Text="Options:" FontWeight="Bold" Margin="0,0,0,5"/>

                                <ItemsControl ItemsSource="{Binding FormattedOptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="•  " FontWeight="Bold" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
    </Grid>
    </Grid>
</Window>
